<%- include('partials/header.ejs') %>
<body>
    <header>
        <div class="nav">
            <div id="title" class="title"><a href="">Todo List</a></div>
            <div class="right-nav">
                <ul class="inner-nav">
                    <li><a href="/"><i class="fa-solid fa-calendar-week fa-beat-fade"></i> Today</a></li>
                    <li><a href="/work"><i class="fa-solid fa-briefcase fa-beat-fade"></i> Work</a></li>
                </ul>
            </div>
        </div>
        
    </header>
    <div class="todo-site">
        <div class="box heading">
            <h1 class="heading-text"><%- dayInWeek %>, <%= month %> <%= day %></h1>
        </div>
        <div class="box todo-list">

            <div class="todo-div">
                <input class="check" type="checkbox" name="" id="">
                <p class="todo">Learning EJS</p>
            </div>
            <div class="todo-div">
                <input class="check" type="checkbox" name="" id="">
                <p class="todo">Learning EJS</p>
            </div>
            <% todos.forEach(todo => { %>
                <div class="todo-div">
                <input class="check" type="checkbox" name="" id="">
                <p class="todo"> <%- todo %> </p>
            </div>
            <% }); %>
            <form action="/" method="post">
                <input class="todo-input" type="text" placeholder="New Todo" name="todo"> 
                <button class="add" type="submit">+</button>
            </form>
            
        </div>
    </div>
    <%- include('partials/footer.ejs') %>
</body>
</html>